const argv = require ('yargs')
.option('b', {
    alias: 'base',
    type: 'number',
    describe: 'Base con la que se ejecutarÃ¡ la tabla',
    demandOption: true,
})
.check((argv,options)=> {
    if ( isNaN (argv.b)){
        throw 'La base tiene que ser un Numero';
    }
    return true;

})
.option('l', {
    alias: 'listar',
    type: 'boolean',
    default: false,
    describe: 'If true it will display the table on the console log',
})
.option ('h', {
    alias: 'hasta',
    type: 'number',
    default: 10,
})
.argv ;


module.exports = argv;